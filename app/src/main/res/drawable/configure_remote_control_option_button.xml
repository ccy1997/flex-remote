<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#000000"/>
            <solid
                android:color="@color/red"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#000000"/>
            <solid
                android:color="#FAFAFA"/>
        </shape>
    </item>

</selector>